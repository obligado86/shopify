            "label": "bold"
          }
        ],
        "default": "normal",
        "label": "font style"
      },
      {
        "type": "color",
        "id": "main-button-color",
        "default": "#fff",
        "label": "Button color"
      },
      {
        "type": "color",
        "id": "button-text-color",
        "default": "#000000",
        "label": "Text color"
      },
      {
        "type": "select",
        "id": "button-placement",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
