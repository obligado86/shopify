      },
      {
        "type": "range",
        "id": "button-placer-side-ajustment",
        "min": -30,
        "max": 0,
        "step": 1,
        "default": 0,
        "label": "ajust edge placement"
      },
      {
        "type": "range",
        "id": "button-placer-height-adjustment",
        "min": 20,
        "max": 80,
        "step": 1,
        "default": 50,
        "label": "Height placement"
